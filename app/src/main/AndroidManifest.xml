<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.devband.tronwalletforandroid">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".common.CustomApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.intro.IntroActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.main.MainActivity"
            android:theme="@style/MainTheme" />

        <activity
            android:name=".ui.createwallet.CreateWalletActivity"
            android:theme="@style/WalletTheme" />

        <activity
            android:name=".ui.backupaccount.BackupAccountActivity"
            android:theme="@style/WalletTheme" />

        <activity
            android:name=".ui.login.LoginActivity"
            android:theme="@style/WalletTheme" />

        <activity
            android:name=".ui.address.AddressActivity"
            android:theme="@style/WalletTheme" />

        <activity
            android:name=".ui.qrscan.QrScanActivity"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".ui.sendcoin.SendCoinActivity"
            android:theme="@style/WalletTheme" />

        <activity
            android:name=".ui.about.AboutActivity"
            android:theme="@style/WalletTheme" />

        <activity
            android:name=".ui.more.MoreActivity"
            android:theme="@style/WalletTheme" />

        <activity
            android:name=".ui.representative.RepresentativeActivity"
            android:theme="@style/MainTheme" />

        <activity
            android:name=".ui.node.NodeActivity"
            android:theme="@style/MainTheme" />

        <activity
            android:name=".ui.tronaccount.TronAccountActivity"
            android:theme="@style/MainTheme" />

        <activity
            android:name=".ui.requestcoin.RequestCoinActivity"
            android:theme="@style/WalletTheme" />

        <activity
            android:name=".ui.opensource.OpenSourceActivity"
            android:theme="@style/WalletTheme" />

        <activity
            android:name=".ui.transaction.TransactionActivity"
            android:theme="@style/WalletTheme" />

    </application>

</manifest>