<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.devband.tronwalletforandroid">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".common.CustomApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_tron"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.intro.IntroActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.main.MainActivity"
            android:theme="@style/MainTheme" />

        <activity
            android:name=".ui.createaccount.CreateAccountActivity"
            android:theme="@style/AccountTheme" />

        <activity
            android:name=".ui.login.LoginActivity"
            android:theme="@style/AccountTheme" />

        <activity
            android:name=".ui.address.AddressActivity"
            android:theme="@style/AccountTheme" />

        <activity
            android:name=".ui.sendcoin.SendCoinActivity"
            android:theme="@style/AccountTheme" />

        <activity
            android:name=".ui.importwallet.ImportWalletActivity"
            android:theme="@style/AccountTheme" />
    </application>

</manifest>