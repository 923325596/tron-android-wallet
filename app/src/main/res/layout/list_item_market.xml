<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/txt_market"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="@integer/market_name_weight"
        android:text="Market"
        android:gravity="center"/>
    <TextView
        android:id="@+id/txt_pair"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="@integer/market_pair_weight"
        android:text="Pair"
        android:gravity="center"/>
    <TextView
        android:id="@+id/txt_volume"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="@integer/market_volume_weight"
        android:text="Volume"
        android:gravity="center"/>
    <TextView
        android:id="@+id/txt_percentage"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="@integer/market_percentage_weight"
        android:text="%"
        android:gravity="center"/>
    <TextView
        android:id="@+id/txt_price"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="@integer/market_price_weight"
        android:text="Price"
        android:gravity="center"/>
</LinearLayout>